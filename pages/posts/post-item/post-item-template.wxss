.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date{
  margin: 10px 0 20px 10px;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-left: 16rpx;
  margin-bottom: 15rpx;
}

.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font{
  margin-right: 20px;
  vertical-align: middle;
}